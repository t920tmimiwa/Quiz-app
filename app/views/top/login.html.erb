<div class="form">
    <div class="form_title">ログイン</div>
    <div class="form_content">
        <%= form_tag '/top/login', method: :post do %>
            <div class="form_list">
                <%= label_tag :uname, 'ユーザーネーム' %>
                <%= text_field_tag :uname %>
                <%= label_tag :pass, 'パスワード' %>
                <%= password_field_tag :pass %>
                <%= submit_tag '登録', id: "login" %>
            </div>
        <% end %>
    </div>
</div>